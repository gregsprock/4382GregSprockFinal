extends layout

block content
    .row
        .col-12.col-md-8
            .container
                .row
                .col
                    h1.text-center City
                    form(action='cities', method='POST')
                        select(name='selectedCity')
                            each city in cities
                                option(value=city) #{city}
                        input(type='submit', value='Submit')
                        //this #{} inserts variable directly into the page
                    p #{selectedCity}
                    p #{message}

                .row
                    .col
                        .table-responsive
                        table.table.table-sm.table-hover
                            thead
                                tr
                                    th Callsign
                                    th Departure
                                    th Arrival
                                    th Logon Time
                            tbody
                                each client in clients
                                    tr
                                        td #{client.callsign}
                                        td #{client.planned_depairport}
                                        td #{client.planned_destairport}
                                        td #{client.time_logon}

